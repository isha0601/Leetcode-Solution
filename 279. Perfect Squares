class Solution {
public:
    int dynamic(vector<int>& dp,int n){
        if(n==0)return dp[0]=0;
        if(dp[n]!=-1)return dp[n];
        int ans=n;
        for(int i=1;i*i<=n;i++){
            ans=min(ans,dynamic(dp,n-i*i)+1);
        }
        return dp[n]=ans;
    }
    int numSquares(int n) {
        vector<int> dp(n+1,-1);
        return dynamic(dp,n);
    }
};
