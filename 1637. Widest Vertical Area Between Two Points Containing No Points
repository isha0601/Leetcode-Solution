class Solution {
public:
    int maxWidthOfVerticalArea(vector<vector<int>>& points) {
        vector<int> vec;
        for(auto &p:points){
            vec.push_back(p[0]);
        }
        sort(vec.begin(),vec.end());
        int ans=0;
        for(int i=0;i<vec.size()-1;i++){
            ans=max(vec[i+1]-vec[i],ans);
        }
        return  ans;
    }
};
