class Solution {
public:
    int maxVowels(string s, int k) {
        int vowel=0;
        for(int i=0;i<k;i++){
            if(s[i]=='a' || s[i]=='e' || s[i]=='i' || s[i]=='o' || s[i]=='u')vowel++;
        }
        int st=0;
        int maxVowel=vowel;
        for(int i=k;i<s.length();i++){
            if(s[i]=='a' || s[i]=='e' || s[i]=='i' || s[i]=='o' || s[i]=='u'){
                vowel++;
            }
            if(s[st]=='a' || s[st]=='e' || s[st]=='i' || s[st]=='o' || s[st]=='u')vowel--;
            st++;
            maxVowel=max(maxVowel,vowel);
        }
        return maxVowel;
    }
};
