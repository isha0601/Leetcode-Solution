class Solution {
public:
    int areaOfMaxDiagonal(vector<vector<int>>& dimensions) {
        int maxArea=0,maxDiagonal=0;
        for(int i=0;i<dimensions.size();i++){
            int length=dimensions[i][0],width=dimensions[i][1];

            int currDiagonal=length*length+width*width;

            if(currDiagonal>maxDiagonal || (currDiagonal==maxDiagonal && length*width>maxArea)){
                maxDiagonal=currDiagonal;
                maxArea=length*width;
            }
        }
        return maxArea;
    }
};
