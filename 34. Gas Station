class Solution {
public:
    int canCompleteCircuit(vector<int>& gas, vector<int>& cost) {
       int n=gas.size(),totalTank=0,currTank=0,start=0;
       for(int i=0;i<n;i++){
        int gain=gas[i]-cost[i];
        totalTank+=gain;
        currTank+=gain;


        if(currTank<0){
            start=i+1;
            currTank=0;
        }
       } 
       return totalTank>=0?start:-1;
    }
};
