class Solution {
public:
    int numTilings(int n) {
        /*
        if n=0 2*0  0 
        if n=1 2*1  1  
        if n=2 2*2  2  (2*1+1)
        if n=3 2*3  5  (2*2+1)
        if n=4 2*4  11 (2*5+1)
        if n=5 2*5  24 (2*11+2)  A[n]=2*A[n-1]+A[n-2]
        */
        const int mod=1e9+7;
        if(n==0) return 1;
        if(n==1)return 1;
        if(n==2) return 2;

        vector<long long > dp(n+1,0);

        dp[0]=1,dp[1]=1,dp[2]=2;

        for(int i=3;i<=n;i++){
            dp[i]=(2*dp[i-1]+dp[i-3])%mod;
        }
        return dp[n];
    }
};
