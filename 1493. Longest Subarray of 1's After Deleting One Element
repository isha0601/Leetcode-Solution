class Solution {
public:
    int longestSubarray(vector<int>& nums) {
        int count=0,max1=0,prev=-1;
        for(int i=0;i<nums.size();i++){
            if(nums[i]==1){
                count++;
            }
            else{
                prev=count;
                count=0;
            }
                max1=max(count+prev,max1);
        }
        return max1;
    }
};
